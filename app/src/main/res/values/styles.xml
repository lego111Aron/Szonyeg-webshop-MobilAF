<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/green</item>
        <item name="colorPrimaryDark">@color/darkPeacockBlue</item>
        <item name="colorAccent">@color/yellowishBrown</item>
    </style>

    <style name="ItemDetailText">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">?android:textColorSecondary</item>
<!--        <item name="android:textColor">?android:textColorSecondary</item>-->
    </style>

    <style name="ItemDetailTextBold">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">?android:textColorSecondary</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="CustomRatingBar" parent="Widget.AppCompat.RatingBar">
        <item name="android:progressDrawable">@drawable/custom_rating_star</item>
        <item name="android:minHeight">48dp</item>
        <item name="android:maxHeight">48dp</item>
        <item name="android:stepSize">1</item>
    </style>


    <style name="CustomMenuStyle" parent="Widget.AppCompat.PopupMenu.Overflow">
        <item name="android:popupBackground">@color/darkGreen</item>
        <item name="android:itemTextAppearance">@style/CustomMenuItemText</item>
    </style>

    <style name="CustomMenuItemText" parent="TextAppearance.AppCompat.Widget.ActionBar.Menu">
        <item name="android:textColor">@color/yellowishBrown</item>
    </style>
</resources>